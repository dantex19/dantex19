public class VotingSystem {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Create candidates
      Candidate candidate1 = new Candidate("Messi");
      Candidate candidate2 = new Candidate("Ronaldo");
        

        // Store candidates in an array
        Candidate[] candidates = {candidate1, candidate2};

        System.out.println("Welcome to the Class Captain Voting System!");
        System.out.println("Candidates:");
        for (int i = 0; i < candidates.length; i++) {
            System.out.println((i + 1) + ". " + candidates[i].getName());
        }

        // Voting process
        System.out.print("Enter the number of voters: ");
        int numberOfVoters = scanner.nextInt();

        for (int i = 1; i <= numberOfVoters; i++) {
            System.out.print("Voter " + i + ", enter your vote (1, 2): ");
            int vote = scanner.nextInt();

            if (vote >= 1 && vote <= candidates.length) {
                candidates[vote - 1].addVote();
                System.out.println("Vote registered for " + candidates[vote - 1].getName());
            } else {
                System.out.println("Invalid vote. Please enter a valid number (1, 2).");
                i--; 
            }
        }
