import java.util.ArrayList;
import java.util.Collections;

public class MinNumberFinder {
    // Method to find the minimum number in the ArrayList
    public int findMin(ArrayList<Integer> numbers) {
        // Directly use Collections.min() to find and return the minimum
        return Collections.min(numbers);
    }

    public static void main(String[] args) {
        // Creating an ArrayList and adding numbers
        ArrayList<Integer> numbers = new ArrayList<>();
        numbers.add(10);
        numbers.add(52);
        numbers.add(20);
        numbers.add(211);

        // Creating an instance of MinNumberFinder
        MinNumberFinder finder = new MinNumberFinder();

        // Finding and printing the minimum number
        int min = finder.findMin(numbers);
        System.out.println("The minimum number is: " + min);
    }
}
